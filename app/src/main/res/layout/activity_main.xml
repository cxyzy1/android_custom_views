<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <cn.cxy.customviews.CustomTextViewWithClick
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <cn.cxy.customviews.RectView
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <cn.cxy.customviews.CircleView
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <cn.cxy.customviews.TriangleView
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <cn.cxy.customviews.SectorView
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <cn.cxy.customviews.ArcView2
            android:layout_width="100dp"
            android:layout_height="20dp" />

        <cn.cxy.customviews.DiamondView
            android:layout_width="100dp"
            android:layout_height="100dp" />
    </LinearLayout>
</ScrollView>
